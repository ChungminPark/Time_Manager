{
  "name": "Time Manager",
  "version": "1.0",
  "manifest_version": 2,
  "description": "work scheduler",
  "permissions": [
    "alarms",
    "notifications",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "clock.png"
  },
  
  "manifest_version": 2
}